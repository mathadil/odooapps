<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- Inherit the existing settings view -->
        <record id="view_res_config_settings_custom" model="ir.ui.view">
            <field name="name">res.config.settings.custom</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <!-- Add your custom checkbox field -->
                <!--<xpath expr="//form" position="inside">-->
                <xpath expr="//div[@id='about']" position="before">
                <div class="app_settings_block" 
                        data-string="DS Divers" data-key="dkdivers"
                        string="S Divers">
                    <block title="Divers" name="divers">
                        <setting string="Hide Powered By Odoo"
                            help="Hide Powered By Odoo in Login Page" id="hide_powered_by_odoo">
                            <field name="hide_pbo"/>
                        </setting>
                        <setting string="Hide Manage Databases"
                            help="Hide Manage Databases in Login Page" id="hide_manage_databases">
                            <field name="hide_mdb"/>
                        </setting>
                    </block>
                </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>