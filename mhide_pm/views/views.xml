<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="login_page_layout" inherit_id="web.login_layout" name="Login Page Layout">
        <xpath expr="//div[@class='card-body']//div[last()]" position="replace">
            <div class="text-center small mt-4 pt-3 login--footer" t-if="not disable_footer">
                <t t-if="not request.env['ir.config_parameter'].sudo().get_param('mhide_pm.hide_pbo', False)">
                    <a class="pr-2 mr-1" href="/web/database/manager">Manage Databases</a>
                </t>
                <t t-if="not request.env['ir.config_parameter'].sudo().get_param('mhide_pm.hide_mdb', False)">
                    <a href="https://www.odoo.com?utm_source=db&amp;utm_medium=auth" target="_blank">Powered by
                <span>Odoo</span>
              </a>
                </t>
            </div>
        </xpath>
    </template>
</odoo>